<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailBajuActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/gambar_masuk"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/harga_masuk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Harga"
                android:textAlignment="center"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/nama_masuk"
                android:hint="disini nama baju yg di kirim"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/ket_masuk"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:hint="disini keterangan baju yg di kirim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:layout_gravity="left">

                    <Button
                        android:id="@+id/btn_min"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="10dp"
                        android:background="@drawable/ic_baseline_remove_circle_24"/>
                    <TextView
                        android:id="@+id/qty"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:hint="0" />
                    <Button
                        android:id="@+id/btn_add"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="10dp"
                        android:background="@drawable/ic_baseline_add_circle_24"/>


                </LinearLayout>
                <TextView
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:id="@+id/total_Harga"
                    android:layout_width="200dp"
                    android:textColor="@color/black"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:textAlignment="center"
                    android:hint="TOTAL HARGA"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>